<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/poster_placeholder"
        android:id="@+id/ivMovieImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        app:layout_heightPercent="50%"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="19%"
        android:src="@drawable/ic_media_play"/>

    <TextView
        android:text="The Magnificent Seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMovieImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvMovieTitle" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="12dp"
        android:id="@+id/rbMovieRating"
        android:layout_below="@+id/tvMovieReleaseDate"
        android:layout_alignLeft="@+id/tvMovieReleaseDate"
        android:layout_alignStart="@+id/tvMovieReleaseDate" />

    <TextView
        android:text="Release Date: 2016-09-14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/tvMovieReleaseDate"
        android:layout_below="@+id/tvMovieTitle"
        android:layout_alignLeft="@+id/tvMovieTitle"
        android:layout_alignStart="@+id/tvMovieTitle"
        android:layout_marginTop="12dp" />



    <TextView
        android:id="@+id/tvMovieOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A big screen remake of John Sturges' classic western The Magnificent Seven, itself a remake of Akira Kurosawa's Seven Samurai. Seven gun men in the old west gradually come together to help a poor village against savage thieves."
        android:layout_marginTop="13dp"
        android:layout_below="@+id/rbMovieRating"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/rbMovieRating"
        android:layout_alignStart="@+id/rbMovieRating" />


</android.support.percent.PercentRelativeLayout>